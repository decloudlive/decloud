#!/usr/bin/env bash

set -e

SCRIPT_DIR="$(dirname "$0")"
cd "$SCRIPT_DIR/.."

bin/check-nofile

echo Building dependencies...
./rebar3 compile

if [ $# -gt 0 ] && [ `uname -s` == "Darwin" ]; then
    RANDOMX_JIT="disable randomx_jit"
else
    RANDOMX_JIT=
fi

export ERL_EPMD_ADDRESS=127.0.0.1

while true; do
    echo Launching Erlang Virtual Machine...
    if
        erl +A100 +SDio100 +Bi -pa `./rebar3 path` \
            -config config/sys.config -args_file config/vm.args.dev \
            -run ar main $RANDOMX_JIT "$@"
    then
        echo "decloud Heartbeat: Server terminated safely."
        exit 0
    else
        echo "decloud Heartbeat: The decloud server has terminated. It will restart in 15 seconds."
        echo "decloud Heartbeat: If you would like to avoid this, press control+c to kill the server."
        sleep 15
    fi
done
